<?xml version="1.0" encoding="UTF-8" ?>
<includes>
    <include name="View_540_List_Control">
        <param name="itemlayout" default="View_50_Itemlayout" />
        <param name="itemheight" default="item_list_height" />
        <param name="altid" default="999999" />
        <param name="height" default="view_list_height" />
        <param name="top" default="0" />
        <param name="controllayout" default="View_Vertical" />
        <param name="controltype" default="panel" />
        <param name="viewtype" default="$LOCALIZE[535]" />
        <param name="viewtypename" default="list" />
        <param name="forced" default="false" />
        <param name="flipsides" default="false" />
        <definition>
            <control type="$PARAM[controltype]" id="$PARAM[id]">
                <nested />
                <scrolltime tween="quadratic">400</scrolltime>
                <top>$PARAM[top]</top>
                <visible>$PARAM[visible]</visible>
                <include content="View_50_List_Sides" condition="$PARAM[flipsides]">
                    <param name="left" value="$PARAM[right]" />
                    <param name="right" value="$PARAM[left]" />
                </include>
                <include content="View_50_List_Sides" condition="!$PARAM[flipsides]">
                    <param name="left" value="$PARAM[left]" />
                    <param name="right" value="$PARAM[right]" />
                </include>
                <height>$PARAM[height]</height>
                <include>$PARAM[controllayout]</include>
                <pagecontrol>60</pagecontrol>
                <viewtype label="$PARAM[viewtype]">$PARAM[viewtypename]</viewtype>
                <include content="View_Forced" condition="$PARAM[forced]">
                    <param name="string" value="$PARAM[viewtype]" />
                </include>
                <itemlayout height="$PARAM[itemheight]">
                    <include content="$PARAM[itemlayout]">
                        <param name="itemheight" value="$PARAM[itemheight]" />
                    </include>
                </itemlayout>
                <focusedlayout height="$PARAM[itemheight]">
                    <control type="group">
                        <visible>!Control.HasFocus($PARAM[id]) + !Control.HasFocus($PARAM[altid])</visible>
                        <include content="$PARAM[itemlayout]">
                            <param name="itemheight" value="$PARAM[itemheight]" />
                        </include>
                    </control>
                    <control type="group">
                        <visible>Control.HasFocus($PARAM[id]) | Control.HasFocus($PARAM[altid])</visible>
                        <include content="$PARAM[itemlayout]">
                            <param name="fgcolor" value="main_bg" />
                            <param name="bgcolor" value="main_fg" />
                            <param name="panelcolor" value="main_fg_100" />
                            <param name="selectbox" value="true" />
                            <param name="itemheight" value="$PARAM[itemheight]" />
                        </include>
                    </control>
                    <control type="button">
                        <left>0</left>
                        <top>0</top>
                        <width>1</width>
                        <height>1</height>
                        <onload condition="!IsEmpty(ListItem.Trailer)">PlayerControl(Repeat)</onload>
                        <onfocus condition="!IsEmpty(ListItem.Trailer)">PlayMedia($ESCINFO[ListItem.trailer],1)</onfocus>
                        <onunfocus condition="Player.HasVideo">PlayerControl(Stop)</onunfocus>
                        <texturefocus>-</texturefocus>
                        <texturenofocus>-</texturenofocus>
                        <animation type="Focus">
                            <effect type="fade" delay="2000" start="0" end="100" />
                        </animation>
                    </control>
                </focusedlayout>
            </control>
        </definition>
    </include>
    <include name="View_540_List_Info">
        <control type="group">
            <include>View_FlipSides</include>
            <width>1038.53</width>
            <control type="group">
                <control type="image">
                    <left>0</left>
                    <width>360</width>
                    <height>460</height>
                    <texture background="true">$VAR[ROM_Simple_Art_Main]</texture>
                    <aspectratio>keep</aspectratio>
                </control>
            </control>
            <control type="group">
                <right>30</right>
                <width>723.33</width>
                <control type="image">
                    <left>120</left>
                    <width>615</width>
                    <height>460</height>
                    <texture background="true">$VAR[ROM_Simple_Art_Snap]</texture>
                    <aspectratio>keep</aspectratio>
                    <visible>!Player.Playing</visible>
                </control>
                <control type="videowindow">
                    <visible>Player.Playing + !IsEmpty(ListItem.Trailer)</visible>
                    <left>120</left>
                    <height>460</height>
                </control>
            </control>
            <control type="grouplist">
                <top>470</top>
                <usecontrolcoords>true</usecontrolcoords>
                <control type="group">
                    <left>0</left>
                    <right>15</right>
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>90</width>
                        <height>90</height>
                        <bordersize>5</bordersize>
                        <texture>$INFO[ListItem.Property(platform),special://home/addons/plugin.program.advanced.emulator.launcher/media/p_pixel/,.png]</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>110</left>
                        <height>30</height>
                        <top>30</top>
                        <font>font_tiny</font>
                        <textcolor>main_fg_70</textcolor>
                        <label>$VAR[ROM_Details]</label>
                    </control>
                </control>
                <control type="group">
                    <top>90</top>
                    <left>0</left>
                    <control type="image">
                        <left>0</left>
                        <width>390</width>
                        <height>240</height>
                        <bordersize>5</bordersize>
						<texture background="true">$VAR[ROM_Simple_Art_Title]</texture>
						<aspectratio>keep</aspectratio>
					</control>
                    <control type="textbox">
                        <left>400</left>
                        <right>15</right>
                        <align>justify</align>
                        <font>font_tiny</font>
                        <textcolor>main_fg_70</textcolor>
                        <height>240</height>
                        <label>$INFO[ListItem.Plot]</label>
                    </control>
                </control>
            </control>
        </control>
    </include>

    <include name="View_540_List_ROM_Info">
        <control type="group">
            <visible>Control.IsVisible(540)</visible>
            <include>View_Group</include>
            <include content="View_540_List_Control">
                <param name="left" value="-20" />
                <param name="right" value="1038.53" />
                <param name="id" value="540" />
                <param name="viewtype" value="$LOCALIZE[31435]" />
                <param name="viewtypename" value="biginfo" />
                <param name="forced" value="true" />
                <param name="flipsides" value="Skin.HasSetting(FlipSide)" />
                <param name="visible" value="$EXP[Exp_IsPluginAdvancedLauncher]" />
            </include>
            <include>View_540_List_Info</include>
        </control>
    </include>
</includes>