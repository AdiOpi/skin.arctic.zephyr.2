<?xml version="1.0" encoding="UTF-8" ?>
<includes>
    <include name="View_54_ROM_Itemlayout">
        <param name="altid" default="999999" />
        <param name="icon" default="$VAR[ROM_Simple_Art_Main]" />
        <param name="iconheight" default="item_icon_height" />
        <param name="icononlyheight" default="100%" />
        <param name="labelinclude" default="View_51_Wall_Label" />
        <param name="aspectratio" default="scale" />
        <param name="clearlogo" default="false" />
        <param name="circle" default="false" />
        <param name="diffuse" default="diffuse/poster-wall.png" />
        <definition>
            <control type="group">
                <right>10</right>
                <control type="group">
                    <height>$PARAM[iconheight]</height>
                    <include condition="$PARAM[circle]" content="View_51_Wall_Circle">
                        <param name="diffuse" value="$PARAM[diffuse]" />
                        <param name="selectbox" value="$PARAM[selectbox]" />
                        <param name="id" value="$PARAM[id]" />
                    </include>

                    <include content="Object_Geometric" condition="!$PARAM[circle]">
                        <param name="diffuse" value="$PARAM[diffuse]" />
                    </include>

                    <control type="group">
                        <visible>!String.StartsWith(ListItem.FolderPath,pvr://)</visible>
                        <height>$PARAM[icononlyheight]</height>
                        <include>Object_DefaultIcon</include>

                        <include content="Object_Poster">
                            <param name="icon" value="$PARAM[icon]" />
                            <param name="aspectratio" value="$PARAM[aspectratio]" />
                            <param name="bordersize" value="$PARAM[bordersize]" />
                            <param name="diffuse" value="$PARAM[diffuse]" />
                        </include>
                    </control>

                    <control type="group">
                        <visible>String.StartsWith(ListItem.FolderPath,pvr://)</visible>
                        <height>$PARAM[icononlyheight]</height>
                        <include>Object_DefaultIcon</include>
                        <include content="Object_Poster">
                            <param name="icon" value="$PARAM[icon]" />
                            <param name="aspectratio" value="keep" />
                            <param name="bordersize" value="60" />
                            <param name="diffuse" value="$PARAM[diffuse]" />
                        </include>
                    </control>

                    <control type="image">
                        <bordersize>15</bordersize>
                        <texture colordiffuse="80000000">diffuse/circle.png</texture>
                        <visible>!$PARAM[selectbox]</visible>
                        <visible>$PARAM[circle]</visible>
                    </control>

                    <include condition="!$PARAM[circle]">View_WatchedOverlay</include>

                    <control type="group">
                        <visible>!$PARAM[circle]</visible>
                        <visible>Control.HasFocus($PARAM[id]) | Control.HasFocus($PARAM[altid])</visible>
                        <include condition="$PARAM[selectbox]" content="View_Selectbox">
                            <param name="focusbounce" value="$PARAM[focusbounce]" />
                        </include>
                    </control>
                </control>
                <include content="$PARAM[labelinclude]">
                    <param name="bordersize" value="$PARAM[bordersize]" />
                    <param name="diffuse" value="$PARAM[diffuse]" />
                    <param name="iconheight" value="$PARAM[iconheight]" />
                    <param name="icononlyheight" value="$PARAM[icononlyheight]" />
                    <param name="label2" value="$PARAM[label2]" />
                    <param name="textfade_end" value="$PARAM[textfade_end]" />
                    <param name="textfade_start" value="$PARAM[textfade_start]" />
                    <param name="id" value="$PARAM[id]" />
                    <param name="selectbox" value="$PARAM[selectbox]" />
                </include>

                <control type="group">
                    <height>$PARAM[iconheight]</height>
                    <control type="image">
                        <right>30</right>
                        <bottom>30</bottom>
                        <width>33%</width>
                        <aspectratio align="right" aligny="bottom">keep</aspectratio>
                        <texture>$VAR[Image_ClearLogo]</texture>
                        <visible>$PARAM[clearlogo]</visible>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_54_ROM_Container">
        <param name="itemlayout" default="View_54_ROM_Itemlayout" />
        <param name="itemwidth" default="item_poster_width" />
        <param name="itemheight" default="item_row_height" />
        <param name="controltype" default="panel" />
        <param name="controllayout" default="View_Standard" />
        <param name="orientation" default="vertical" />
        <param name="visible" default="true" />
        <param name="aspectratio" default="scale" />
        <param name="viewtype" default="$LOCALIZE[31415]" />
        <param name="viewtypename" default="icon" />
        <param name="forced" default="false" />
        <param name="circle" default="false" />
        <param name="diffuse" default="diffuse/poster-wall.png" />
        <param name="altid" default="999999" />
        <definition>
            <control type="$PARAM[controltype]" id="$PARAM[id]">
                <nested />
                <scrolltime tween="quadratic">400</scrolltime>
                <include>$PARAM[controllayout]</include>
                <orientation>$PARAM[orientation]</orientation>
                <height>$PARAM[height]</height>
                <visible>$PARAM[visible]</visible>
                <viewtype label="$PARAM[viewtype]">$PARAM[viewtypename]</viewtype>
                <include content="View_Forced" condition="$PARAM[forced]">
                    <param name="string" value="$PARAM[viewtype]" />
                </include>
                <itemlayout width="$PARAM[itemwidth]" height="$PARAM[itemheight]">
                    <include content="$PARAM[itemlayout]">
                        <param name="selectbox" value="false" />
                        <param name="icon" value="$PARAM[icon]" />
                        <param name="iconheight" value="$PARAM[iconheight]" />
                        <param name="labelinclude" value="$PARAM[labelinclude]" />
                        <param name="id" value="$PARAM[id]" />
                        <param name="aspectratio" value="$PARAM[aspectratio]" />
                        <param name="diffuse" value="$PARAM[diffuse]" />
                        <param name="clearlogo" value="$PARAM[clearlogo]" />
                        <param name="circle" value="$PARAM[circle]" />
                        <param name="label2" value="$PARAM[label2]" />
                        <param name="colordiffuse" value="$PARAM[colordiffuse_nf]" />
                    </include>
                </itemlayout>
                <focusedlayout width="$PARAM[itemwidth]" height="$PARAM[itemheight]">
                    <include content="$PARAM[itemlayout]">
                        <param name="selectbox" value="true" />
                        <param name="icon" value="$PARAM[icon]" />
                        <param name="iconheight" value="$PARAM[iconheight]" />
                        <param name="labelinclude" value="$PARAM[labelinclude]" />
                        <param name="id" value="$PARAM[id]" />
                        <param name="altid" value="$PARAM[altid]" />
                        <param name="aspectratio" value="$PARAM[aspectratio]" />
                        <param name="focusbounce" value="$PARAM[focusbounce]" />
                        <param name="diffuse" value="$PARAM[diffuse]" />
                        <param name="clearlogo" value="$PARAM[clearlogo]" />
                        <param name="circle" value="$PARAM[circle]" />
                        <param name="label2" value="$PARAM[label2]" />
                        <param name="colordiffuse" value="$PARAM[colordiffuse_fo]" />
                    </include>
                </focusedlayout>
            </control>
        </definition>
    </include>

    <include name="View_540_ROM_Simple">
        <control type="group">
            <include>View_Group</include>
            <visible>Control.IsVisible(540)</visible>
            <include content="View_54_ROM_Container">
                <param name="id" value="540" />
                <param name="height" value="view_height" />
                <param name="viewtype" value="$LOCALIZE[31435]" />
                <param name="viewtypename" value="icon" />
                <param name="controllayout" value="View_514_Wall_Info_Layout" />
                <param name="forced" value="true" />
                <param name="visible" value="$EXP[Exp_IsPluginAdvancedLauncher]" />
                <width>1028.56</width>
                <include>View_Vertical_Movement</include>
            </include>
            <include content="View_522_Showcase_Seasons_Info">
                <param name="visible" value="true" />
                <param name="icon" value="$VAR[Image_Landscape]" />
                <param name="title" value="$VAR[Label_List_Title]" />
                <param name="plot" value="$INFO[ListItem.Plot]" />
            </include>
        </control>
    </include>
</includes>